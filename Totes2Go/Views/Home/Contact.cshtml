@model Totes2Go.Models.EmailContact

@{
    ViewBag.Title = "Contact";
}
<section class="contact row m-top-100">
    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9 col-centered contact-form">
        <h2 class="text-center">@ViewBag.Title</h2>

        @using (Html.BeginForm("Contact", "Home"))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group">

                    <div class="col-md-10 col-centered">
                        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-centered">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-centered">
                        @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.Phone)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-centered">
                        @Html.LabelFor(m => m.Message, new { @class = "control-label" })
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Message)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12 col-sm-4 col-md-4 col-md-push-1">
                        <p>Would you prefer a phone call or email?</p>
                    </div>
                    <div class="col-xs-2 col-sm-2 col-sm-push-1 col-md-2 col-md-push-2">
                        @Html.LabelFor(m => m.PhoneCheck, new { @class = "control-label" })
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2">
                        @Html.CheckBox("PhoneCheck", false)
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2">
                        @Html.LabelFor(m => m.EmailCheck, new { @class = "control-label" })
                    </div>
                    <div class="col-xs-2 col-sm-2 col-sm-pull-1 col-md-2 col-md-pull-2">
                        @Html.CheckBox("EmailCheck", false)
                    </div>
                    <div class="col-xs-6 col-sm-6 col-sm-push-2 col-md-6 col-md-push-2">
                        <p id="error-message"><p />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-2">
                        <input type="submit" class="btn btn-default submit" value="Send" />
                    </div>

                </div>
            </div>
        }
    </div>
    <img src="~/Content/Images/blur_03.png" class="bottom-blur" />
</section>



@Html.Partial("_MessageSuccessModal")

@section Scripts {
    @if (ViewBag.Message != null)
    {
        <script>
            $(document).ready(function () {

                console.log("Success");
                $('#successModal').modal('show');
            });
        </script>

    }
}

