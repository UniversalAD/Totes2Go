@{
    ViewBag.Title = "Home Page";
}

@Html.Partial("_TopVideoSection")

<section class="icons m-top-100">
    <div class="row">
        <div class="col-lg-10 row col-centered icon-blue-bg">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <img src="@Url.Content("~/Content/Images/creative_06.png")" class="img-responsive center-block" />
                <h3 class="text-center font-white">Complimentary<br /> Creative</h3>
                <p class="text-center font-white">
                    We design the ad and create the artwork!
                    You have a business to run and automobiles
                    to fix. Let us worry about the design details.
                </p>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <img src="@Url.Content("~/Content/Images/distribution_06.png")" class="img-responsive center-block" />
                <h3 class="text-center font-white">Daily<br /> Distribution</h3>
                <p class="text-center font-white">
                    We connect your business to the most loyal customers
                    around and get your brand into the hands and
                    homes of the people in your local community
                    that matter most!
                </p>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <img src="@Url.Content("~/Content/Images/exposure_04.png")" class="img-responsive center-block" />
                <h3 class="text-center font-white">Exclusive<br /> Exposure</h3>
                <p class="text-center font-white">
                    You are featured exclusively! We separate your
                    brand from the competition and capture
                    the full attention of your community!
                </p>
            </div>
        </div>
    </div>
</section>

<section class="container-fluid striped m-top-100"></section>

<section class="container-fluid grocery-corner m-top-100">
    <div class="row">
        <div class="col-lg-10 col-centered relative">
            <div class="col-lg-6 on-the-go-img">
                <img src="~/Content/Images/on-the-go-arrow.png" class="img" />
            </div>
            <div class="col-xs-6 col-sm-6 col-sm-push-6 col-md-6 col-md-push-6 col-lg-6 lady-img">
                <img src="~/Content/Images/lady_05.png" class="img" />
            </div>
        </div>
    </div>
</section>

<section class="container-fluid striped"></section>

<section class="row totes m-top-100 m-bottom-100">
    <img src="~/Content/Images/blur_03.png" class="top-blur" />
    <div class="col-lg-11 col-centered">
        <div class="col-sm-5 col-sm-push-1 col-md-5 col-md-push-1 col-lg-5 col-lg-push-1 totes-img-sec">
            <img src="~/Content/Images/Tote-Mini.png" class="img" />
        </div>
        <div class="col-sm-5 col-sm-push-1 col-md-5 col-md-push-1 col-lg-5 col-lg-push-1 font-white totes-p-sec">
            <div>
                <h3 class="text-center">Totes For All Occasions</h3>
                <p class="text-center">The products we place your advertising on are not merely long lasting, but also used and seen, every day by many potential clients. This is, by its very definition, what good advertising is.</p>
            </div>
        </div>
    </div>
    <img src="~/Content/Images/blur_03.png" class="bottom-blur" />
</section>

<section class="text-vid-sec relative">
    <div class="row">
        <div class="col-lg-11 col-centered">
            <div class="col-sm-5 col-sm-push-1 col-md-5 col-md-push-1  col-lg-5 col-lg-push-1 totes-p-sec">
                <div>
                    <h3 class="text-center">Who We Are<br /><span>Fast, Easy, Secure.</span></h3>
                    <p class="text-center">We are an established company, having been in business for almost 40 years. This experience translates to a highly effective, low cost and effective advertising, seen by a wide variety of potential clients.</p>
                </div>
            </div>
            <div class="col-sm-5 col-sm-push-1 col-md-5 col-md-push-1 col-lg-5 col-lg-push-1 totes-video-sec no-gutters">
                <iframe width="100%" src="https://www.youtube.com/embed/VlN1jrUurD0" frameborder="0"; encrypted-media" allowfullscreen></iframe>
            </div>
        </div>
    </div>
    <img src="~/Content/Images/blur_03.png" class="bottom-blur" />
</section>